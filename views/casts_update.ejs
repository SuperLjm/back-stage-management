<!DOCTYPE html>
<html>
  <head>
    <title>后端管理系统--更新演员</title>
    <Link rel = 'stylesheet' href = '/bootstrap/dist/css/bootstrap.min.css' />
        <Link rel = 'stylesheet' href = '/stylesheets/font-awesome.min.css' />
        <Link rel = 'stylesheet' href = '/stylesheets/ionicons.min.css' />
        <Link rel = 'stylesheet' href = '/admin-lte/dist/css/AdminLTE.min.css' />
        <Link rel = 'stylesheet' href = '/admin-lte/dist/css/skins/skin-blue.min.css' />
  </head>
 <body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%- include('./header.ejs')  %>

  <%- include('./menu.ejs')  %>
    
    
    
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        更新演员
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Your Page Content Here -->
					<div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Horizontal Form</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" method='post' action='updateCastsAction'>
              <div class="box-body">
                <div class="form-group">
                  <label for="castsid" class="col-sm-2 control-label">演员id</label>

                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="castsid" readonly value='<%= result[0].id %>' placeholder="演员id" name='id' >
                  </div>	
                </div>
								
								<div class="form-group">
									<label for="castsname" class="col-sm-2 control-label">演员名字</label>

									<div class="col-sm-10">
										<input type="text" class="form-control" id="castsname" value='<%= result[0].name %>' placeholder="演员名字" name='name' >
									</div>	
								</div>
								
								<div class="form-group">
									<label for="castsimg" class="col-sm-2 control-label">演员头像</label>

									<div class="col-sm-10">
										<input type="text" class="form-control" id="castsimg" value='<%= result[0].avatars.small %>' placeholder="演员头像" name='img' >
									</div>	
								</div>
								
								<div class="form-group">
									<label for="castsalt" class="col-sm-2 control-label">演员alt</label>

									<div class="col-sm-10">
										<input type="text" class="form-control" value='<%= result[0].alt %>' id="castsalt" placeholder="演员alt" name='alt' >
									</div>	
								</div>
              <!-- /.box-body -->
              <div class="box-footer">
                <div class="col-sm-10">
                	<button type="submit" class="btn btn-info">更新演员</button>
                </div>
                <input type='hidden' value='<%= limitNum %>' name=limitNum />
								<input type='hidden' value='<%= skipNum %>' name=skipNum />
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('./footer.ejs')  %>
  
  <%- include('./sidebar.ejs')  %>

  
</div>
  </body>
  <script src = "/javascripts/jquery.min.js" ></script>
    <script src = "/bootstrap/dist/js/bootstrap.min.js" ></script>
    <script src = "/javascripts/app.min.js" ></script>
</html>
